@using ApplicationCore.Entities;
@using Infrastructure.Data;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager
@inject UserProfilesService userProfilesService
@{
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    UserProfile profile = await userProfilesService.GetByApplicationUserIdAsync(appUser.Id.ToString());
}

<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-light border shadow" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">Hệ thống</div>
                <a class="nav-link" href="/">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-house"></i></div>
                    Trang chủ
                </a>
                <div class="sb-sidenav-menu-heading">Người dùng &amp; Vai trò</div>
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-users"></i></div>
                    Quản lý người dùng
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link" asp-controller="UserRole" asp-action="UserProfilesEdit">Quản lý hồ sơ</a>
                        <a class="nav-link" asp-controller="UserRole" asp-action="Role">Danh sách vai trò</a>
                    </nav>
                </div>
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Đã đăng nhập là:</div>
            @profile.FirstName @profile.LastName
        </div>
    </nav>
</div>