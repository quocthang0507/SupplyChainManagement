@using SupplyChainManagement.Models.AccountViewModels;
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Khôi phục mật khẩu";
    Layout = "_PartialLayout";
}

<div class="d-flex justify-content-center h-100">
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://picsum.photos/800/500" class="img-fluid" alt="Lorem picsum">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1">
                    <form method="post">

                        <input asp-for="Code" type="hidden" />

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-uppercase">Khôi phục mật khẩu</p>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control"
                                   placeholder="Nhập địa chỉ email hợp lệ" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control"
                                   placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="ConfirmPassword"></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control"
                                   placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4 pt-2">
                            <button type="submit" class="btn btn-primary"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Khôi phục
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles
    {
    <link rel="stylesheet" href="~/css/login.min.css" asp-append-version="true" />
    }

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    }