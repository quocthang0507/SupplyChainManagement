@{
    ViewBag.Title = "400 - Yêu cầu không hợp lệ";
    Layout = "_PartialLayout";
}

<section class="vh-100">
    <div class="container py-5">
        <div class="error-container">
            <h1>400</h1>
            <h2>Yêu cầu không hợp lệ</h2>
            <p>Yêu cầu mà bạn tạo không hợp lệ hoặc chưa đầy đủ :)))</p>
            <a class="btn btn-primary" href="/">Quay về trang chủ</a>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .error-container {
            text-align: center;
            padding: 100px;
        }

        h1 {
            font-size: 150px;
            margin-bottom: 10px;
            color: #007bff;
            transition: opacity 1s ease-in-out;
        }

        h2 {
            font-size: 30px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
        }
    </style>
}