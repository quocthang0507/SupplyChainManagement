<!DOCTYPE html>
<html lang="vi">
<head>
    <Partial name="_Header" />
    <script defer src="~/lib/fontawesome/js/all.min.js"></script>
    <link href="~/lib/simple-datatables-style.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body class="sb-nav-fixed">
    <Partial name="_Nav" />

    <div id="layoutSidenav">
        <Partial name="_SidebarNav" />

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">
                            &copy; 2023 - Hệ thống quản lý chuỗi cung ứng
                        </div>
                        <div>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/simple-datatables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
