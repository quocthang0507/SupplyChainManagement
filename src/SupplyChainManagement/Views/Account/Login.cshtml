@using ApplicationCore.Entities;
@using Microsoft.AspNetCore.Identity;
@using SupplyChainManagement.Models.AccountViewModels;
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_PartialLayout";
}

<div class="d-flex justify-content-center h-100">
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://picsum.photos/800/500" class="img-fluid" alt="Lorem picsum">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-uppercase">Đăng nhập</p>
                        </div>
                        @if (ViewContext.ViewData.ModelState.ContainsKey("LoginFailed"))
                        {
                            <div class="alert alert-warning text-center alert-dismissible" role="alert">
                                @Html.ValidationMessage("LoginFailed", new {@class = "text-danger"})
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control"
                                   placeholder="Nhập địa chỉ email hợp lệ" value="admin@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control"
                                   placeholder="Nhập mật khẩu" value="P@55w0rd@dm1n" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe">
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-body">Quên mật khẩu?</a>
                        </div>

                        <div class="text-center mt-4 pt-2">
                            <button type="submit" class="btn btn-primary"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Đăng nhập
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Chưa có tài khoản? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"
                                                      class="link-danger">Đăng ký ngay!</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles
    {
    <link rel="stylesheet" href="~/css/login.min.css" asp-append-version="true" />
    }

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    }